# Firebase (auth)
VITE_FIREBASE_API_KEY="your-firebase-api-key"
VITE_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
VITE_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
VITE_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK (server-side)
# Option 1: Set GOOGLE_APPLICATION_CREDENTIALS to the path of your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS="/absolute/path/to/service-account-file.json"
# Option 2: Set FIREBASE_SERVICE_ACCOUNT_PATH to the path of your service account JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH="/absolute/path/to/service-account-file.json"
# Option 3: Set FIREBASE_SERVICE_ACCOUNT to the JSON content of your service account
# FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"your-project-id",...}'

# Google OAuth (legacy - only needed if using direct Google OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Server Configuration
PORT=3003
NODE_ENV=development
SESSION_SECRET=your-session-secret
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:3003

# Database
# Port 5433 is used for both development and test databases to keep configuration consistent
# The project uses separate databases on the same port: ai-feed-dev and ai-feed-test
DATABASE_URL=postgres://postgres:postgres@localhost:5433/ai-feed-dev
PGPASSWORD=postgres

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Feedly (optional)
FEEDLY_USER_ID=your-feedly-user-id
FEEDLY_ACCESS_TOKEN=your-feedly-access-token
FEEDLY_REFRESH_TOKEN=your-feedly-refresh-token 