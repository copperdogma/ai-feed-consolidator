# Firebase (auth)
VITE_FIREBASE_API_KEY="YOUR_FIREBASE_API_KEY"
VITE_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project-id.firebasestorage.app"
VITE_FIREBASE_MESSAGING_SENDER_ID="123456789012"
VITE_FIREBASE_APP_ID="1:123456789012:web:abcdef1234567890"

# Firebase Admin SDK (server-side)
# Service account file in project root (added to .gitignore)
GOOGLE_APPLICATION_CREDENTIALS="./firebase-service-account.json"

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET

# Session
SESSION_SECRET=REPLACE_WITH_RANDOM_SECURE_STRING

# Database
# Port 5433 is used for both development and test databases to keep configuration consistent
# The project uses separate databases on the same port: ai-feed-dev and ai-feed-test
DATABASE_URL=postgres://postgres:postgres@localhost:5433/ai-feed-dev

# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Feedly
FEEDLY_USER_ID=YOUR_FEEDLY_USER_ID
FEEDLY_ACCESS_TOKEN=YOUR_FEEDLY_ACCESS_TOKEN
FEEDLY_REFRESH_TOKEN=YOUR_FEEDLY_REFRESH_TOKEN

PGPASSWORD=postgres